#nav ul li {display: block; float: right;}
/*#nav ul li:hover {background: #ff1a1a;}*/
#nav ul li:hover ul {display: block;}
#nav ul li ul {
  position: absolute;
  width: auto;
  display: none;
}
#nav ul li ul li { 
  background: inherit; 
  display: block; 
}
#nav ul li ul li a {display:block !important;} 
#nav ul li ul li:hover {background: inherit;}


